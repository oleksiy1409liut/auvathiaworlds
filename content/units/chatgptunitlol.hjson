{
  type: "UnitType"
  name: "skyhawk"         // internal identifier
  localizedName: "Sky Hawk"
  description: "A fast, light aerial unit equipped with twin SMG turrets."

  // Base stats
  health: 200
  armor: 2
  speed: 4.2
  drag: 0.05
  buildSpeed: 2.0
  flying: true
  hitSize: 8

  // Engine visuals (optional)
  engines: [
    {
      offset: [ -3, 4 ]
      size: 1.2
      mirror: true
      region: "units-1/fighter-engine"
      outlineRegion: "units-1/fighter-outline"
    }
  ]

  // Weapon definitions
  weapons: [
    {
      type: "Weapon"
      name: "skyhawk-smg"      // internal
      shootSound: "shoot-smg"
      reload: 8                // ticks between shots
      x: -4
      y: 2
      mirror: true
      bullet: {
        type: "BasicBulletType"
        speed: 6
        lifetime: 30
        damage: 8
        width: 4
        height: 7
        knockback: 0.2
        ammoMultiplier: 1.0
      }
    }
    {
      // mirrored second turret
      type: "Weapon"
      name: "skyhawk-smg-mirror"
      shootSound: "shoot-smg"
      reload: 8
      x: 4
      y: 2
      mirror: false
      bullet: {
        type: "BasicBulletType"
        speed: 6
        lifetime: 30
        damage: 8
        width: 4
        height: 7
        knockback: 0.2
      }
    }
  ]
}
